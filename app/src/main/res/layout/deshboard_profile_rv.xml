<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_gravity="center|top">

        <ImageView
            android:id="@+id/pfp"
            android:layout_marginStart="4dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:elevation="1dp"
            android:background="@drawable/deshboard_profile_circle" />

        <ImageView
            android:id="@+id/bigpfp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/deshboard_profile"
            android:elevation="2dp" />

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="42dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/deshboard_profile_rectangle"
        android:gravity="center"
        android:elevation="3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/like"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="7dp"
            android:background="@drawable/img_likebtn" />

        <ImageView
            android:id="@+id/more"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="7dp"
            android:background="@drawable/img_morebtn" />

    </LinearLayout>

</FrameLayout>