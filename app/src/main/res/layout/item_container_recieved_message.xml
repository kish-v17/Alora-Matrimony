<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/recieverImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:background="@drawable/deshboard_profile_circle"
        app:layout_constraintBottom_toBottomOf="@id/recievedmsg"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/recievedmsg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hello demo recieved"
        android:textColor="@color/white_70"
        android:textSize="20dp"
        android:padding="15dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/background_recieved_message"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/recieverImg"
        app:layout_constraintWidth_percent="0.70"/>

    <TextView
        android:id="@+id/recievedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/recievedmsg"
        app:layout_constraintStart_toStartOf="@id/recievedmsg"
        android:layout_marginStart="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>