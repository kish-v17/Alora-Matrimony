<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Delete_Profile">

    <LinearLayout
        android:id="@+id/profile_bar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="30dp"
        android:background="@drawable/search_header">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:layout_marginStart="10dp"
            style="@style/txtQuicksandsemibold30"
            android:textColor="@color/bluegray_100"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Enter your password to delete account"
        android:textSize="20dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/profile_bar"
        android:fontFamily="@font/quicksand_medium"/>

    <TextView
        android:id="@+id/txtPassword"
        style="@style/txtQuicksandmedium15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:gravity="start"
        android:letterSpacing="0.04"
        android:text="Password"
        app:layout_constraintTop_toBottomOf="@id/txt1"/>

        <EditText
            android:id="@+id/etPassword"
            style="@style/etSolidRounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_margin="20dp"
            android:letterSpacing="0.06"
            android:paddingStart="11dp"
            android:paddingTop="15dp"
            android:paddingEnd="30dp"
            android:paddingBottom="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtComPassword" />

        <TextView
            android:id="@+id/txtconPassword"
            style="@style/txtQuicksandmedium15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="start"
            android:letterSpacing="0.04"
            android:text="Confirm Password"
            app:layout_constraintTop_toBottomOf="@id/etPassword"/>

        <EditText
            android:id="@+id/etConPassword"
            style="@style/etSolidRounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:layout_margin="20dp"
            android:letterSpacing="0.06"
            android:paddingStart="11dp"
            android:paddingTop="15dp"
            android:paddingEnd="30dp"
            android:paddingBottom="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtComPassword" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContinue"
            style="@style/btnSolidRounded_1"
            android:layout_width="190dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:letterSpacing="0.06"
            android:text="Delete"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>